<?xml version="1.0" encoding="utf-8"?>
<layout>
    <FrameLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/main_page_refresh_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.administrator.wanandroid.customview.arc.ArcView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".25"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <View
        android:id="@+id/mine_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10"
        app:layout_constraintWidth_percent=".8" />
    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintTop_toTopOf="@id/mine_background"
        app:layout_constraintStart_toStartOf="@id/mine_background"
        app:layout_constraintEnd_toEndOf="@id/mine_background"
        app:layout_constraintBottom_toBottomOf="@id/mine_background"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.20"
        android:src="@drawable/gift"
        app:civ_border_color="#FCA019"
        app:civ_border_width="1dp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/mine_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未登录"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/mine_background"
        app:layout_constraintEnd_toEndOf="@id/mine_background"
        app:layout_constraintStart_toStartOf="@id/mine_background"
        app:layout_constraintTop_toTopOf="@id/mine_background"
        app:layout_constraintVertical_bias="0.70" />
    <TextView
        android:id="@+id/mine_rank"
        app:layout_constraintBottom_toBottomOf="@id/mine_background"
        app:layout_constraintStart_toStartOf="@id/mine_background"
        app:layout_constraintWidth_percent=".27"
        app:layout_constraintHeight_percent=".05"
        android:textColor="#000000"
        android:text="排名:0"
        android:background="@drawable/bound_left"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/mine_level"
        app:layout_constraintBottom_toBottomOf="@id/mine_background"
        app:layout_constraintStart_toEndOf="@id/mine_rank"
        app:layout_constraintWidth_percent=".26"
        app:layout_constraintHeight_percent=".05"
        android:textColor="#000000"
        android:text="等级:0"
        android:background="@drawable/bound_left"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/mine_point"
        app:layout_constraintBottom_toBottomOf="@id/mine_background"
        app:layout_constraintEnd_toEndOf="@id/mine_background"
        app:layout_constraintWidth_percent=".27"
        app:layout_constraintHeight_percent=".05"
        android:textColor="#000000"
        android:text="积分:000"
        android:background="@drawable/bound_right"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <View
        android:id="@+id/mine_content_background"
        android:background="#ffffff"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71"
        app:layout_constraintWidth_percent=".8" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mine_recyclerview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71"
        app:layout_constraintWidth_percent=".8"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>
</layout>