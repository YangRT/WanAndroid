<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="8dp"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="5dp">
    <TextView
        android:text="鸿洋"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="#8b8383"
        android:id="@+id/main_page_recyclerview_item_author"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/main_page_recyclerview_item_image"
        android:layout_marginTop="5dp"
        android:src="@drawable/p3"
        android:scaleType="fitXY"
        android:layout_width="88dp"
        android:layout_height="130dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_page_recyclerview_item_author"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/todo_item_title"
        android:textSize="18sp"
        android:textColor="#e10a0808"
        android:maxWidth="260dp"
        android:maxLines="2"
        android:text="Android开发中遇到的奇怪问题和解决方案"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".65"
        app:layout_constraintLeft_toRightOf="@id/main_page_recyclerview_item_image"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toTopOf="@id/main_page_recyclerview_item_image"
        />
    <TextView
        android:id="@+id/todo_item_time"
        android:textSize="16sp"
        android:textColor="#8b8383"
        android:text="2019年5月8日"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="5dp"/>
    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/main_page_recyclerview_item_desc"
        app:layout_constraintTop_toBottomOf="@id/todo_item_title"
        app:layout_constraintStart_toStartOf="@id/todo_item_title"
        android:text="使用前端跨端框架开发一款安卓版本的玩安卓App,具体实现了登录注册，体系，公众号，项目列表功能，还有导航功能，收藏文章项目功能等。还使用了高德地图api实现机主定位功能。"
        android:textSize="11sp"
        android:maxWidth="250dp"
        android:maxLines="3"
        app:layout_constraintWidth_percent=".65"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/todo_item_type"
        android:textSize="16sp"
        android:text="广场Tab/自助"
        android:textColor="#8b8383"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_page_recyclerview_item_image"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/main_page_recyclerview_item_collect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/unlike"
        android:layout_marginEnd="5dp"
        android:layout_width="26dp"
        android:layout_height="26dp"/>
</android.support.constraint.ConstraintLayout>