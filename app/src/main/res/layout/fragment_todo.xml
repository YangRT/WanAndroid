<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorTheme"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/todo_toolbar_back"
        android:layout_marginStart="10dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"/>
    <Spinner
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".40"
        android:backgroundTint="@color/white"
        android:id="@+id/list_spinner"
        android:spinnerMode="dropdown"
        android:overlapAnchor="false"
        android:entries="@array/type"
        android:gravity="center"
        android:popupBackground="@color/colorTheme"
        android:layout_width="0dp"
        android:theme="@style/common_spinner"
        android:layout_height="?attr/actionBarSize"/>
    <ImageView
        android:id="@+id/todo_toolbar_add"
        android:src="@drawable/add"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"/>
    <android.support.v4.widget.SwipeRefreshLayout
        app:layout_constraintTop_toBottomOf="@id/list_spinner"
        android:id="@+id/main_page_refresh_layout"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/article_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.constraint.ConstraintLayout>
</layout>