<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="2"
        android:hint="标题"
        android:textColor="#000000"
        android:background="@null"
        android:gravity="top|left"
        android:textSize="16sp"
        android:id="@+id/detail_title"
        android:minHeight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/detail_line1"
        app:layout_constraintTop_toBottomOf="@id/detail_title"
        android:background="@color/colorTheme"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:padding="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/detail_line1"
        android:hint="详情"
        android:textSize="16sp"
        android:background="@null"
        android:textColor="#000000"
        android:gravity="top|left"
        android:minHeight="200dp"
        android:id="@+id/detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/detail_line2"
        app:layout_constraintTop_toBottomOf="@id/detail_content"
        android:background="@color/colorTheme"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:padding="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/detail_line2"
        android:hint="预计完成时间(格式为20xx-xx-xx)"
        android:textSize="16sp"
        android:background="@null"
        android:textColor="#000000"
        android:id="@+id/detail_time"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="4dp"
        android:id="@+id/detail_line3"
        app:layout_constraintTop_toBottomOf="@id/detail_time"
        android:background="@color/colorTheme"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/detail_line3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        android:id="@+id/type_hint"
        android:text="选择事件类型:"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:id="@+id/detail_type"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/type_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:text="生活"
            android:layout_marginLeft="10dp"
            android:id="@+id/detail_type_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:text="工作"
            android:layout_marginLeft="10dp"
            android:id="@+id/detail_type_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:text="学习"
            android:layout_marginLeft="10dp"
            android:id="@+id/detail_type_learn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:text="其他"
            android:layout_marginLeft="10dp"
            android:id="@+id/detail_type_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <View
        android:id="@+id/detail_line4"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/detail_type"
        android:background="@color/colorTheme"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/detail_bt"
        app:layout_constraintWidth_percent=".70"
        app:layout_constraintHeight_percent=".08"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#ffffff"
        android:text="完成"
        android:textSize="20sp"
        android:elevation="2dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorTheme"/>
</android.support.constraint.ConstraintLayout>
</layout>