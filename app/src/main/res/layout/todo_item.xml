<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:singleLine="true"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:id="@+id/todo_item_title"
        android:textSize="18sp"
        android:textColor="#e10a0808"
        android:maxLines="2"
        android:text="Android开发中遇到的奇怪问题和解决方案"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todo_item_time"/>
    <TextView
        android:id="@+id/todo_item_type"
        android:textSize="16sp"
        android:textColor="@color/colorTheme"
        android:text="广场Tab/自助"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/todo_item_time"
        android:textSize="16sp"
        android:text="2019年5月8日"
        android:textColor="#8b8383"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/todo_item_finish_time"
        android:text="2019年5月8日"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/todo_item_delete"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/todo_item_delete"
        android:textSize="18sp"
        android:text="删除"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#D84315"
        app:layout_constraintTop_toBottomOf="@id/todo_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/todo_item_finish"
        android:textSize="18sp"
        android:text="完成"
        android:layout_marginEnd="20dp"
        android:textColor="#1565C0"
        app:layout_constraintTop_toTopOf="@id/todo_item_delete"
        app:layout_constraintEnd_toStartOf="@id/todo_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>